---
import { getCollection, getEntry } from 'astro:content';
import Layout from '../layouts/Layout.astro'; 
import Hero from 'src/components/Hero.astro';
import { Image } from 'astro:assets';


const posts = await getCollection('posts');
---

<Layout title="Keystatic & Astro's Content Collections">
  <Hero />
  <section>
    <div class="container mx-auto my-20 px-3 max-w-screen-2xl">
        <ul class="grid grid-cols-3"> 
          {posts.map(post => (
            <li><a href={`/posts/${post.slug}`}>
              <div class="card bg-base-100 w-96 shadow-xl h-full">
              <figure>
                <Image src={post.data.featuredImage}
                  class="h-60 object-fit rounded-t-2xl"
                  alt="Shoes" />
              </figure>
              <div class="card-body">
                <h2 class="card-title">{post.data.title}</h2>
                <p>If a dog chews shoes whose shoes does he choose?</p>
                <div class="card-actions justify-end">
                  <button class="btn btn-primary btn-link">Read full story</button>
                </div>
              </div>
            </div>
  
              </a>
            </li>
          ))}
        </ul>
    </div>
  </section>
</Layout>

